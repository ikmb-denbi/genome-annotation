/*
 * -------------------------------------------------
 *  genome-annotation Nextflow base config file
 * -------------------------------------------------
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 */

process {

	cpus = { 1 * task.attempt }
	memory = { 8.GB * task.attempt }
	time = { 1.h * task.attempt }

	errorStrategy = { task.exitStatus in [143,137] ? 'retry' : 'finish' }
	maxRetries = 1
	maxErrors = '-1'
	
	withName:runRepeatMasker {
		cpus = { 8 * task.attempt }
		memory = { 8.GB * task.attempt }
		time = { 10.h * task.attempt }
	}
	withName:runMergeRMGenome {
		cpus = { 1 * task.attempt }
                memory = { 4.GB * task.attempt }
                time = { 1.h * task.attempt }
	}
	withName:runMakeBlastDB {
		cpus = { 1 * task.attempt }
                memory = { 8.GB * task.attempt }
                time = { 4.h * task.attempt }
	}
	withName:runBlastProteins {
		cpus = { 1 * task.attempt }
                memory = { 16.GB * task.attempt }
                time = { 48.h * task.attempt }
	}
	withName:runExonerateProts {
		cpus = { 8 * task.attempt }
                memory = { 16.GB * task.attempt }
                time = { 72.h * task.attempt }
	}
	withName:runGenomeThreaderProteins {
		module = [ 'Genomethreader/1.7.0' ]
		cpus = { 1 * task.attempt }
                memory = { 16.GB * task.attempt }
                time = { 72.h * task.attempt }
	}
	withName:runBlastEst {
		cpus = { 8 * task.attempt }
                memory = { 16.GB * task.attempt }
                time = { 72.h * task.attempt }
	}
	withName:runExonerateEST {
		cpus = { 8 * task.attempt }
                memory = { 16.GB * task.attempt }
                time = { 72.h * task.attempt }
	}
	withName:runFastp {
		cpus = { 8 * task.attempt }
		memory = { 8.GB * task.attempt }
		time = { 4.h * task.attempt }
	}
	withName:runMakeHisatDB {
		cpus = { 8 * task.attempt }
                memory = { 16.GB * task.attempt }
                time = { 8.h * task.attempt }
	}
	withName:runHisat2 {
		cpus = { 16 * task.attempt }
                memory = { 16.GB * task.attempt }
                time = { 8.h * task.attempt }
	}
	withName:mergeHisatBams {
		cpus = { 16 * task.attempt }
                memory = 120.GB
                time = { 24.h * task.attempt }
	}
	withName:runTrinity {
		cpus = { 16 * task.attempt }
                memory = 120.GB
                time = { 120.h * task.attempt }
	}
	withName:runBlastTrinity {
		cpus = { 8 * task.attempt }
                memory = { 8.GB * task.attempt }
                time = { 8.h * task.attempt }
	}
	withName:runExonerateTrinity {
		cpus = { 2 * task.attempt }
                memory = { 8.GB * task.attempt }
                time = { 8.h * task.attempt }
	}

	withname:runAugustus {
                cpus = { 1 * task.attempt }
                memory = { 8.GB * task.attempt }
                time = { 48.h * task.attempt }
        }
}

params {
  // Defaults only, expecting to be overwritten
  max_memory = 120.GB
  max_cpus = 16
  max_time = 240.h
}
